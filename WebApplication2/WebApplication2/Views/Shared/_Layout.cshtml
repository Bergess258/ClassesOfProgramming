<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="nav1">
        @if (Request.IsAuthenticated)
        {
            <div class="forimg">
                <img class="prof-img" src="~/Content/img/AdminIcon.jpg" class="" />
            </div>
            <div class="nav_link">
                <img class="nav_img" src="~/Content/img/profile_png_1114172.png" />
                @if (User.IsInRole("A"))
                {
                    @Html.ActionLink("Профиль", "MainAdmin", "Admin", null, new { @class = "nav_text" })
                }
            </div>
        }
        else
        {
            <div class="nav_link">
                @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav_text" })
            </div>
            <div class="nav_link">
                @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav_text" })
            </div>
        }
        <div class="nav_link">
            <img class="nav_img" src="~/Content/img/play.png" width="38" height="38" />
            <a class="nav_text" href="#">Кейсы</a>
        </div>

        <div class="nav_link">
            <img class="nav_img" src="~/Content/img/57d3d0a9273fd157136714c9.png" width="35" height="35" />
            <a class="nav_text" href="#">Инвентарь</a>
        </div>
        <div class="nav_link">
            <img class="nav_img" src="~/Content/img/5ad038f54b434162bd5e7e3c.png" width="35" height="35" />
            <a class="nav_text" href="#">Топ игроков</a>
        </div>
        <div class="nav_link">
            <img class="nav_img" src="~/Content/img/faq-png-icon-1.png" width="35" height="35" />
            <a class="nav_text" href="#">Информация</a>
        </div>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/Site.css" rel="stylesheet" />
</body>
</html>
